# Linux Cloud Server Environment Configuration
# Copy this to .env for cloud deployments

# Force headless mode for stability
BROWSER_HEADLESS=true

# Increase timeouts for cloud environments
BROWSER_TIMEOUT=120000
PROTOCOL_TIMEOUT=120000
PAGE_LOAD_TIMEOUT=60000

# Chrome executable path for Linux
CHROME_PATH=/usr/bin/google-chrome

# Memory and process limits
NODE_OPTIONS=--max-old-space-size=4096

# Disable unnecessary features for performance
DISABLE_EXTENSIONS=true
DISABLE_PLUGINS=true
DISABLE_GPU=true

# Browser-use specific optimizations
BROWSER_USE_SINGLE_PROCESS=true
BROWSER_USE_DISABLE_HIGHLIGHTING=true

# Logging configuration
LOG_LEVEL=info
DEBUG_MODE=false

# Session management
SESSION_CLEANUP_DELAY=300000
MAX_CONCURRENT_SESSIONS=3

# Network timeouts
HTTP_TIMEOUT=30000
WEBSOCKET_TIMEOUT=60000
